{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "./types",
		"sourceMap": true,
		"lib": ["dom", "es5", "es2015.promise", "es2015.iterable"],
		"module": "es6",
		"moduleResolution": "node",
		"strict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"removeComments": true,
		"target": "es5",
		"outDir": "es"
	},
	"include": [ "src/**/*" ]
}
